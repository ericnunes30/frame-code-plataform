FROM ubuntu:22.04

ENV DEBIAN_FRONTEND=noninteractive

# Base tools + git + build deps (para libs nativas do npm)
RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    ca-certificates \
    curl \
    git \
    bash \
    openssh-client \
    python3 \
    python3-pip \
    build-essential \
  && rm -rf /var/lib/apt/lists/*

# Node.js 20 (para rodar o agente dentro do container)
RUN set -eux; \
  curl -fsSL https://deb.nodesource.com/setup_20.x | bash -; \
  apt-get update; \
  apt-get install -y --no-install-recommends nodejs; \
  rm -rf /var/lib/apt/lists/*

# Ferramentas globais comuns
RUN npm install -g pnpm yarn typescript

# Claude Code (CLI agent)
RUN npm install -g @anthropic-ai/claude-code

# Non-root user for running Claude Code safely
RUN useradd -m -u 1000 -s /bin/bash dev

# code-runner (baixado do GitHub e buildado dentro da imagem)
# Back-compat: ainda aceitamos AGENT_RUNNER_* args (imagens/CI antigos).
ARG CODE_RUNNER_REPO=https://github.com/ericnunes30/agent-runner.git
ARG CODE_RUNNER_REF=v0.2.0
ARG CODE_RUNNER_CACHEBUST=0
ARG AGENT_RUNNER_REPO=
ARG AGENT_RUNNER_REF=
ARG AGENT_RUNNER_CACHEBUST=

RUN set -eux; \
  : "${CODE_RUNNER_REPO:=${AGENT_RUNNER_REPO}}"; \
  : "${CODE_RUNNER_REF:=${AGENT_RUNNER_REF}}"; \
  : "${CODE_RUNNER_CACHEBUST:=${AGENT_RUNNER_CACHEBUST}}"; \
  echo "code-runner cachebust=${CODE_RUNNER_CACHEBUST}"; \
  mkdir -p /opt/code-runner; \
  git clone --depth 1 --branch "${CODE_RUNNER_REF}" "${CODE_RUNNER_REPO}" /tmp/code-runner; \
  cd /tmp/code-runner; \
  npm install --no-fund --no-audit; \
  npm run build; \
  npm prune --omit=dev; \
  cp -r dist package.json package-lock.json node_modules README.md /opt/code-runner/; \
  cd /; \
  rm -rf /tmp/code-runner; \
  npm cache clean --force; \
  ln -s /opt/code-runner /opt/agent-runner || true; \
  printf '%s\n' '#!/usr/bin/env bash' 'exec node /opt/code-runner/dist/index.js "$@"' > /usr/local/bin/code-runner; \
  chmod +x /usr/local/bin/code-runner; \
  ln -s /usr/local/bin/code-runner /usr/local/bin/agent-runner || true

WORKDIR /repo

ENV NODE_ENV=development

CMD ["bash", "-lc", "tail -f /dev/null"]
